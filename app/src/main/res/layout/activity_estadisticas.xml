<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".Estadisticas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="#3647C7"
                    android:text="EcoRecicl@"
                    android:textColor="@color/white"
                    android:textSize="40sp" />
                <ImageView
                    android:id="@+id/ivRegresaEst"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="0dp"
                    android:background="#3647C7"
                    android:onClick="gotologin"
                    app:srcCompat="@android:drawable/ic_menu_revert" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Estadistica de Reciclaje de Vidrio"
                        android:textAlignment="center"
                        android:textColor="#2A73AC"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                    <TableLayout
                        android:id="@+id/TableVidrio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#2B3771">
                            <TextView
                                android:id="@+id/textView18"
                                android:layout_width="105dp"
                                android:layout_height="wrap_content"
                                android:text="Mes"
                                android:textColor="@color/white"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/textView19"
                                android:layout_width="97dp"
                                android:layout_height="wrap_content"
                                android:text="Cantidad (K)"
                                android:textColor="@color/white"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/textView21"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:text="Precio "
                                android:textColor="@color/white"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/textView22"
                                android:layout_width="94dp"
                                android:layout_height="wrap_content"
                                android:text="Recibido"
                                android:textColor="@color/white"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView36"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Estadistica de Reciclaje de Papel"
                        android:textAlignment="center"
                        android:textColor="#2A73AC"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                    <TableLayout
                        android:id="@+id/TablePapel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#EEF97A">
                            <TextView
                                android:id="@+id/textView38"
                                android:layout_width="94dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Mes"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/textView39"
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:text="Cantidad (K)"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/textView31"
                                android:layout_width="84dp"
                                android:layout_height="wrap_content"
                                android:text="Precio "
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/textView32"
                                android:layout_width="88dp"
                                android:layout_height="wrap_content"
                                android:text="Recibido"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/gradiant_value"
                        android:text="Mes de Mayor Reciclaje"
                        android:textAlignment="center"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/water_gradiant"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textViewMonthMaxVidrio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Vmes"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="25sp" />
                        <TextView
                            android:id="@+id/textViewMaxVidrioQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0 Kg"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="25sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/electricity_gradiant"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textViewMonthMaxPapel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pmes"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="25sp" />
                        <TextView
                            android:id="@+id/textViewMaxPapelQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0 Kg"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="25sp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/total_gradiant"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Vidrio Recolectado"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/textViewTotalVidrio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="0 Kg"
                            android:textColor="#ABD9EE"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/total_gradiant"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Papel Recolectado"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/textViewTotalPapel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="0 Kg"
                            android:textColor="#EFE7A1"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="right"
                    android:background="@drawable/total_gradiant"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginStart="15dp"
                        android:text="Total Recolectado:"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/textViewTotalPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="$ 0.000.000"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>